@model ClearCity.Models.Microdistrict

@{
    ViewBag.Title = "Details";
}

<h2>Подробнее</h2>

<div>
    <h4>Микрорайон</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название района
        </dt>

        <dd>
            @Html.DisplayFor(model => model.District.DistrictName)
        </dd>

        <dt>
            Название микрорайона:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MicrodistrictName)
        </dd>
        <dt>
            Дома:
        </dt>
        <dd>
            <table class="table">
                @foreach (var item in Model.Houses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adress)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.MicrodistrictId }) |
    @Html.ActionLink("Назад к списку", "Index")
</p>
